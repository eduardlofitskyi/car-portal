@model Auto.Models.SearchViewModel

<!DOCTYPE html>
@{
    ViewBag.Title = "ViewListOldA";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    @Html.Partial("~/Views/Hello/PartialNavbar.cshtml")
         <div class="search">
        @using (Html.BeginForm("SearchOld", "Search", FormMethod.Post))
        {
            <div class="form-group">
                <label>Марка</label>
                @{
                    <select class="form-control" id="carBrand" name="carBrand">
                        <option value="Выберите марку">Выберите марку</option>
                        @foreach (var mod in Model.BrandList)
                        {
                            <option value="@mod">@mod</option>
                        }
                    </select>
                }
            </div>

        <div class="form-group">
             <label>Модель</label>
            @{
                <select class="form-control" id="carModel" name="carModel" disabled="disabled">
                    <option value="">Выберите модель</option>
                    @foreach (var mod in Model.ModelList)
                    {
                        <option value="@mod">@mod</option>
                    }
                </select>
            }
        </div>

            <div class="form-group" id ="yearF">
                <label>Год</label>
                <br>
                <input type="text" size="10"  id="minRelDate" maxlength ="4" name="minRelDate" placeholder="c" />
                <input type="text" size="10" id="maxRelDate" maxlength="4" name="maxRelDate" placeholder="по" />
            </div>

            <div class="form-group">
                <label>Цена($)</label>
                <br>
                <input type="text" size="10" id="minPrice" name="minPrice" placeholder="от"/>
                <input type="text" size="11" id="maxPrice" name="maxPrice" placeholder="до"/>
            </div>
            <button type="submit" class="btn btn-success pull-right">Поиск</button>
        }
    </div>
</body>
</html>
